generator client {
  provider = "prisma-client-js"
}

// To use Supabase (PostgreSQL):
// 1. Change provider to "postgresql"
// 2. Update DATABASE_URL in .env to your Supabase connection string
// 3. Run: npm run db:generate
// 4. Run: npm run db:push
// See: docs/SUPABASE_SETUP.md for full guide

datasource db {
  provider = "sqlite"  // Change to "postgresql" for Supabase
  url      = env("DATABASE_URL")
}

model Fund {
  id          String   @id @default(cuid())
  name        String
  description String?
  
  // Legacy field (deprecated, keep for migration)
  initialVnd  Float    @default(0)
  
  // Vốn chủ sở hữu (Owner's Equity)
  initialCapital     Float @default(0) // Vốn góp ban đầu
  additionalCapital  Float @default(0) // Vốn góp thêm
  withdrawnCapital   Float @default(0) // Vốn đã rút
  
  // Lợi nhuận chưa phân phối (Retained Earnings)
  retainedEarnings   Float @default(0) // Tự động tính
  
  // Cách tính giá TB khi nhận lãi Earn
  earnInterestMethod String @default("reduce_avg_price") // 'reduce_avg_price' | 'keep_avg_price'
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  accounts     Account[]
  transactions Transaction[]
  assetHoldings AssetHolding[]
  fees         Fee[]
}

model Account {
  id        String   @id @default(cuid())
  fundId    String
  name      String   // Tên tài khoản (Binance 1, Binance 2, Ví lạnh 1, etc.)
  type      String   // binance, cold_wallet, earn
  platform  String?  // binance, trust_wallet, etc.
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  fund         Fund           @relation(fields: [fundId], references: [id])
  assetHoldings AssetHolding[]
  transactions Transaction[]
}

model Transaction {
  id           String   @id @default(cuid())
  fundId       String
  accountId    String?
  type         String   // capital_in, capital_out, buy_usdt, sell_usdt, transfer_usdt, buy_btc, sell_btc, transfer_btc, earn_interest
  amount       Float
  currency     String   // VND, USDT, BTC
  price        Float?   // Giá khi giao dịch (VND/USDT, USDT/BTC)
  fee          Float?   // Phí giao dịch
  feeCurrency  String?  // Đơn vị phí
  fromLocation String?  // Nơi gửi
  toLocation   String?  // Nơi nhận
  note         String?
  costBasis    Float?   // Giá vốn trung bình tại thời điểm giao dịch (cho lệnh Sell)
  realizedPnL  Float?   // Lãi/lỗ thực (cho lệnh Sell)
  createdAt    DateTime @default(now())
  
  fund    Fund     @relation(fields: [fundId], references: [id])
  account Account? @relation(fields: [accountId], references: [id])
}

model AssetHolding {
  id        String   @id @default(cuid())
  fundId    String
  accountId String?
  asset     String   // VND, USDT, BTC
  amount    Float
  avgPrice  Float?   // Giá mua trung bình (VND/USDT, USDT/BTC)
  location  String?  // Vị trí lưu trữ
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  fund    Fund     @relation(fields: [fundId], references: [id])
  account Account? @relation(fields: [accountId], references: [id])
}

model Fee {
  id           String   @id @default(cuid())
  fundId       String
  transactionId String?
  type         String   // trading, transfer, withdrawal
  amount       Float
  currency     String   // BTC, USDT, VND
  description  String?
  createdAt    DateTime @default(now())
  
  fund Fund @relation(fields: [fundId], references: [id])
}